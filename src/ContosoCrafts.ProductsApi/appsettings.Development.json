{
  "MONGO_CONNECTION": "mongodb://admin:admin@localhost:27017",
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Steeltoe": "Information"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "Enrich": ["FromLogContext", "WithMachineName", "WithEnvironmentUserName"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Steeltoe": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Level:u3}]: {Timestamp:dd-MM-yyyy:HH:mm:ss} {SourceContext} {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Properties": { "ApplicationName": "Contoso Website" }
  },
  "consul": {
    "host": "localhost",
    "port": 8500,
    "discovery": {
      "enabled": "true",
      "scheme": "http",
      "port": 5000,
      "serviceName": "contoso-productsapi",
      "tags": ["api", "contoso", "products", "aspnetcore"],
      "registerHealthCheck": true,
      "healthCheckCriticalTimeout": "2m",
      "heartbeat": {
        "enabled": true
      },
      "register": true,
      "deregister": true
    }
  }
}
